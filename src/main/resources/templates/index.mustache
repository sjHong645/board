{{>layout/header}}

<h1>게시판 구현</h1>
<form action = "/posts/delete" method = "GET"> <!-- checkbox에서 선택한 값들을 삭제 할 때 사용한 태그 -->
<div class = "col-md-12">
    <div class="row">
        <div class="col-md-6">
            <!-- 버튼을 누르면 /posts/save로 이동한다 -->
            <!-- 그러면 IndexController에서 해당 url을 GetMapping 했기 때문에-->
            <!-- return 한 값 posts-save.mustache 파일로 이동한다. -->
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>

            <button type = "submit" class = "btn btn-danger">글 삭제</button>
        </div>
    </div>

    <br>

    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th> </th>
            <th><a href = "/sort?column=id">게시글번호</a></th>
            <th><a href = "/sort?column=title">제목</a></th>
            <th><a href = "/sort?column=author">작성자</a></th>
            <th><a href = "/sort?column=content">내용</a></th>
            <th><a href = "/sort?column=modifiedDate">최종수정일</a></th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td><input type = "checkbox" id = "id" name = "checkedItem" value = {{id}}></td>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{content}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>
</form>


{{>layout/footer}}